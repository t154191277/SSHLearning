<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- 三种方法实例化bean -->
	<!-- 构造器 -->
	<bean id="hello" class="helloworld.HelloImpl">
		<constructor-arg index="0" value="Hello Spring"></constructor-arg>
	</bean>
	
	<!-- 静态工厂 -->
	<bean id="bean" class="helloworld.IHelloStaticFactory" factory-method="newInstance">
		<constructor-arg index="0" value="Hello Spring By StaticFactory"></constructor-arg>
	</bean>
	
	<!-- 定义工厂实例 -->
	<bean id="beanInstanceFactory" class="helloworld.IHelloInstanceFactory"></bean>
	<bean id="bean1" factory-bean="beanInstanceFactory" factory-method="newInstance">
		<constructor-arg index="0" value="Hello Spring By InstanceFactory"></constructor-arg>
	</bean>

</beans>